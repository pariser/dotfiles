[user]
    name = Andrew Pariser
    email = pariser@gmail.com

[github]
    user = pariser

[core]
    editor = vim
    excludesfile = ~/.gitignore
    precomposeunicode = true

[color]
    diff = auto
    status = auto
    branch = auto

[pull]
    rebase = true
[push]
    default = current

[rerere]
    enabled = true

[alias]
    permission-reset = "!git-diff -p | grep -E '^(diff|old mode|new mode)' | sed -e 's/^old/NEW/;s/^new/old/;s/^NEW/new/' | git apply"
    add-branch-note = "!git config branch.$(git symbolic-ref HEAD|sed \"s/refs\\/heads\\///\").note $( if [ $# -gt 0 ]; then $1; fi)"
    head = "!git rev-parse --abbrev-ref HEAD"
    upstream = "!git rev-parse --abbrev-ref --symbolic-full-name @{u} 2>/dev/null"
    current-branch = "!git rev-parse --abbrev-ref HEAD"
    local-branches-with-deleted-remote = "!git branch -vv | grep ': gone' | awk '{print $1}'"
    # "!git branch -vv | grep -E '\[origin/.*: gone\]'"

[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f
[filter "hawser"]
    clean = git hawser clean %f
    smudge = git hawser smudge %f
    required = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[pager]
    branch = /usr/local/Cellar/less/551/bin/less --quit-if-one-screen -R
